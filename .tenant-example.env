#
# Laravel Tenant Core - Environment Variables
# Copy these variables to your .env file
#

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# The main/central domain of your application
# Subdomains will be extracted relative to this domain
TENANT_CENTRAL_DOMAIN=example.com

# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================

# Connection name for the central/main database (must exist in config/database.php)
TENANT_CONNECTION_CENTRAL=central

# Connection name for tenant databases (must exist in config/database.php)
TENANT_CONNECTION_TENANT=tenant

# =============================================================================
# RESOLVER CONFIGURATION
# =============================================================================

# How to identify tenants from incoming requests
# Options: subdomain, path, header
TENANT_RESOLVER=subdomain

# Header name for tenant ID (used when TENANT_RESOLVER=header)
TENANT_HEADER_NAME=X-Tenant-ID

# Header name for tenant slug (used when TENANT_RESOLVER=header)
TENANT_HEADER_SLUG_NAME=X-Tenant-Slug

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Enable/disable tenant lookup caching
TENANT_CACHE_ENABLED=true

# Cache TTL in seconds (default: 1 hour)
TENANT_CACHE_TTL=3600

# Cache store to use (null = default cache store)
# Options: file, redis, memcached, database, etc.
TENANT_CACHE_STORE=
